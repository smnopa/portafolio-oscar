---
import '@fontsource/abhaya-libre';
import { ViewTransitions } from 'astro:transitions';
import Header from '../components/Header.astro';
interface Props {
    title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Explora un mundo de creatividad y expresión en mi portafolio artístico. Cada obra es una ventana a mi imaginación, donde colores y formas se funden para contar historias únicas. ¡Bienvenido a mi universo artístico!" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image" href="../img/icon.png" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <ViewTransitions />
    </head>
    <body class="disable-scroll">
        <Header />
        <main>
            <slot />
        </main>
    </body>
</html>
<style>
    html {
        font-family: 'Abhaya Libre', serif;
        background: #DBDBDB;
        background-size: 224px;
    }
	body {
    overflow-y: scroll;
    overflow-x: hidden;
}
body::-webkit-scrollbar {
    width: 0px;
}
body {
    scrollbar-width: none;
}
</style>
